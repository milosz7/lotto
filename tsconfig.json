{
  "compilerOptions": {
    "target": "es2016",
    "module": "es6",
    "moduleResolution": "node",
    "lib": ["es6"],
    "esModuleInterop": true,                         
    "forceConsistentCasingInFileNames": true,   
    "strict": true,                                     
    "skipLibCheck": true,
    "outDir": "./build"                                
  },
  "ts-node": {
    "esm": true
  }
}
